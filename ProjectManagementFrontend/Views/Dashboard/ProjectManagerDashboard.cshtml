<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ProjectManager Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --info: #4895ef;
            --warning: #f72585;
            --danger: #e63946;
            --light: #f8f9fa;
            --dark: #212529;
            --gradient-start: #4361ee;
            --gradient-end: #3a0ca3;
            --card-border-radius: 16px;
            --card-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        }

        body {
            background-color: #f5f7fb;
            color: #495057;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding-bottom: 20px;
        }

        .dashboard-header {
            background: linear-gradient(120deg, var(--gradient-start), var(--gradient-end));
            color: white;
            padding: 25px 30px;
            border-radius: 0 0 25px 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .dashboard-header h2 {
            font-weight: 700;
            margin: 0;
            font-size: 1.8rem;
        }

        .dashboard-header p {
            opacity: 0.9;
            margin: 5px 0 0;
            font-size: 1rem;
        }

        .dashboard-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-bottom: 30px;
        }

        .card {
            flex: 1 1 calc(25% - 20px);
            min-width: 220px;
            border: none;
            border-radius: var(--card-border-radius);
            background: white;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            overflow: hidden;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
        }

        .card-body {
            padding: 20px;
            position: relative;
        }

        .card-icon {
            position: absolute;
            right: 20px;
            top: 20px;
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            opacity: 0.8;
        }

        .card h4 {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .card p {
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
            color: var(--dark);
        }

        .card-growth {
            font-size: 0.8rem;
            padding: 3px 8px;
            border-radius: 12px;
            background: rgba(40, 167, 69, 0.15);
            color: #28a745;
            display: inline-block;
            margin-top: 8px;
        }

        .chart-card {
            border: none;
            border-radius: var(--card-border-radius);
            background: white;
            box-shadow: var(--card-shadow);
            margin-bottom: 20px;
            height: 100%;
        }

        .chart-header {
            padding: 20px 20px 0;
            border-bottom: 1px solid #edf2f9;
            margin-bottom: 15px;
        }

        .chart-header h4 {
            font-weight: 600;
            color: var(--dark);
            margin: 0;
        }

        .chart-container {
            padding: 15px;
            height: 300px;
        }

        .bg-user { background: linear-gradient(45deg, #4361ee, #4cc9f0); color: white; }
        .bg-role { background: linear-gradient(45deg, #3f37c9, #7209b7); color: white; }
        .bg-project { background: linear-gradient(45deg, #4895ef, #4cc9f0); color: white; }
        .bg-sprint { background: linear-gradient(45deg, #560bad, #b5179e); color: white; }
        .bg-issue { background: linear-gradient(45deg, #f72585, #b5179e); color: white; }
        .bg-comment { background: linear-gradient(45deg, #7209b7, #3a0ca3); color: white; }

        @@:media (max-width: 992px) {
            .card {
                flex: 1 1 calc(50% - 20px);
            }
        }

       @@:media (max-width: 576px) {
            .card {
                flex: 1 1 100%;
            }
            
            .dashboard-header {
                padding: 20px 15px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="dashboard-header">
        <h2><i class="fas fa-tachometer-alt me-2"></i>ProjectManager Dashboard</h2>
        <p>Welcome to your project management dashboard</p>
    </div>

    <div class="container">
        <!-- Cards Row -->
        <div class="dashboard-cards">
          
          
            
            <div class="card">
                <div class="card-body">
                    <div class="card-icon bg-project">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <h4>Total Projects</h4>
                    <p>@Model.TotalProjects</p>
                    <span class="card-growth"><i class="fas fa-arrow-up"></i> 8.7%</span>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="card-icon bg-sprint">
                        <i class="fas fa-running"></i>
                    </div>
                    <h4>Total Sprints</h4>
                    <p>@Model.TotalSprints</p>
                    <span class="card-growth"><i class="fas fa-arrow-up"></i> 5.2%</span>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="card-icon bg-issue">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <h4>Total Issues</h4>
                    <p>@Model.TotalIssues</p>
                    <span class="card-growth"><i class="fas fa-arrow-up"></i> 12.4%</span>
                </div>
            </div>
            
            <div class="card">
                <div class="card-body">
                    <div class="card-icon bg-comment">
                        <i class="fas fa-comments"></i>
                    </div>
                    <h4>Total Comments</h4>
                    <p>@Model.TotalComments</p>
                    <span class="card-growth"><i class="fas fa-arrow-up"></i> 7.6%</span>
                </div>
            </div>
        </div>

        <!-- Charts Row -->
        <div class="row">
            <div class="col-lg-6">
                <div class="chart-card">
                    <div class="chart-header">
                        <h4><i class="fas fa-chart-pie me-2"></i>Project Overview</h4>
                    </div>
                    <div class="chart-container">
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="chart-card">
                    <div class="chart-header">
                        <h4><i class="fas fa-chart-bar me-2"></i>Statistics</h4>
                    </div>
                    <div class="chart-container">
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Pie chart
        var ctxPie = document.getElementById("pieChart").getContext("2d");
        new Chart(ctxPie, {
            type: "pie",
            data: {
                labels: [ "Projects", "Issues", "Comments","Sprints"],
                datasets: [{
                    data: [ @(Model.TotalProjects), @(Model.TotalIssues), @(Model.TotalComments),@(Model.TotalSprints)],
                    backgroundColor: ["#4361ee", "#4cc9f0", "#f72585", "#7209b7"],
                    borderWidth: 0,
                    hoverOffset: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { 
                    legend: { 
                        position: "bottom",
                        labels: {
                            padding: 20,
                            usePointStyle: true,
                            pointStyle: "circle"
                        }
                    }
                },
                cutout: "50%"
            }
        });

        // Bar chart
        var ctxBar = document.getElementById("barChart").getContext("2d");
        new Chart(ctxBar, {
            type: "bar",
            data: {
                labels: [ "Projects", "Issues", "Comments","Sprints"],
                datasets: [{
                    label: "Counts",
                    data: [ @(Model.TotalProjects), @(Model.TotalIssues), @(Model.TotalComments),@(Model.TotalSprints)],
                    backgroundColor: ["#4361ee", "#4cc9f0", "#f72585", "#7209b7"],
                    borderRadius: 8,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { 
                    y: { 
                        beginAtZero: true,
                        grid: {
                            drawBorder: false
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
</body>
</html>
