@model IEnumerable<ProjectManagementFrontend.Models.MST_StatusModel>

@{
    ViewBag.Title = "Status List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">Statuses</h3>
        <div class="card-toolbar">
            <a href="@Url.Action("AddEdit", "IssueStatus")" class="btn btn-primary">+ Add Status</a>
        </div>
    </div>

    <div class="card-body">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Status Id</th>
                    <th>Status Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StatusId</td>
                            <td>@item.StatusName</td>
                            <td>
                                <a href="@Url.Action("AddEdit", "IssueStatus", new { id = item.StatusId })" class="btn btn-sm btn-warning">Edit</a>
                                <a href="@Url.Action("Delete", "IssueStatus", new { id = item.StatusId })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this status?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">No statuses found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
