@model ProjectManagementFrontend.Models.PRJ_ProjectModel
@{
    ViewBag.Title = Model.ProjectId == 0 ? "Add Project" : "Edit Project";
}

<h2>@ViewBag.Title</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<form asp-action="AddEdit" method="post">
    @Html.HiddenFor(m => m.ProjectId)

    <div class="mb-3">
        <label asp-for="ProjectName" class="form-label">Project Name *</label>
        <input asp-for="ProjectName" class="form-control" placeholder="Enter project name" />
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectDescription" class="form-label"></label>
        <textarea asp-for="ProjectDescription" class="form-control"></textarea>
        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ClientName" class="form-label"></label>
        <input asp-for="ClientName" class="form-control" />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProjectManagerName" class="form-label"></label>
        <input asp-for="ProjectManagerName" class="form-control" />
        <span asp-validation-for="ProjectManagerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date *</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProjectStatus">Project Status</label>
        @Html.DropDownListFor(model => model.ProjectStatus,
        (SelectList)ViewBag.StatusList,
                "Select Status",
                new { @class = "form-control" })
    </div>


    <div class="mb-3">
        <label asp-for="Visibility" class="form-label"></label>
        <select asp-for="Visibility" class="form-select">
            <option value="Private" selected>Private</option>
            <option value="Public">Public</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="CreatedByName" class="form-label"></label>
        <input asp-for="CreatedByName" type="text" class="form-control" />
        <span asp-validation-for="CreatedByName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
