@model List<ProjectManagementFrontend.Models.PRJ_ProjectModel>

@{
    ViewBag.Title = "Projects";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Projects</h2>
        <a asp-action="AddEdit" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Project
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search -->
    <form method="get" asp-action="Index" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control form-control-lg"
                   placeholder="Search by Project name" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary btn-lg w-100">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>

    <!-- Projects Table -->
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Project Name</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var project in Model)
                {
                    <tr>
                        <td>@project.ProjectName</td>
                        <td>@project.ProjectDescription</td>
                        <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                        <td>@project.EndDate?.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-action="AddEdit" asp-route-id="@project.ProjectId" class="btn btn-outline-primary btn-sm me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <form asp-action="Delete" asp-controller="Project" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@project.ProjectId" />
                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this project?');">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No projects found.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Project pagination">
            <ul class="pagination justify-content-center mt-3">
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
                       asp-route-search="@ViewBag.Search">Previous</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-pageNumber="@i"
                           asp-route-search="@ViewBag.Search">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
                       asp-route-search="@ViewBag.Search">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>
