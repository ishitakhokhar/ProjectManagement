@model ProjectManagementFrontend.Models.DTO.IssueCommentDTO
@{
    ViewData["Title"] = Model.CommentId == 0 ? "Add Comment" : "Edit Comment";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddEdit" asp-controller="ProjectIssueComment" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.CommentId)

        <div class="mb-3">
            <label asp-for="IssueId" class="form-label">Issue</label>
            <select asp-for="IssueId" asp-items="Model.IssueList" class="form-select">
                <option value="">-- Select Issue --</option>
            </select>
            <span asp-validation-for="IssueId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CommentText" class="form-label">Comment</label>
            <textarea asp-for="CommentText" class="form-control"></textarea>
            <span asp-validation-for="CommentText" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedBy" class="form-label">Created By</label>
            <select asp-for="CreatedBy" asp-items="Model.UserList" class="form-select">
                <option value="">-- Select User --</option>
            </select>
            <span asp-validation-for="CreatedBy" class="text-danger"></span>
        </div>


        <div class="mb-3 form-check">
            <input asp-for="IsShow" class="form-check-input" type="checkbox" />
            <label asp-for="IsShow" class="form-check-label">Show Comment</label>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-controller="ProjectIssueComment" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
