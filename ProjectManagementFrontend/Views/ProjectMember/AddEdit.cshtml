@model  PRJ_ProjectMemberModel
@{
    ViewBag.Title = Model.ProjectMemberId == 0 ? "Add Project Member" : "Edit Project Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm rounded">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">@ViewBag.Title</h3>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("AddEdit", "ProjectMember", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.ProjectMemberId)

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ProjectId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ProjectId, new SelectList(Model.ProjectList, "Value", "Text", Model.ProjectId), "-- Select Project --", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.ProjectId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.UserId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.UserId, new SelectList(Model.UserList, "Value", "Text", Model.UserId), "-- Select User --", new { @class = "form-select" })
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(m => m.RoleInProject , new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.RoleInProject , new { @class = "form-control", placeholder = "Enter role in project" })
                @Html.ValidationMessageFor(m => m.RoleInProject , "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success me-2">
                    @((Model.ProjectMemberId == 0) ? "Add Member" : "Update Member")
                </button>
                <a href="@Url.Action("Index", "ProjectMember")" class="btn btn-secondary">Cancel</a>
            </div>
        }
    </div>
</div>
